extends layout 

block content 

  h1 Genre: #{genre.name}

  if books_in_genre.length 

    p #[strong Delete the following books before attempting to delete this genre.] 
    div(style='margin-left: 20px; margin-top: 20px;')
      h4 Books 
      dl 
        each book in books_in_genre 
          dt 
            a(href=book.url) #{book.title} 
          dd #{book.summary} 
  
  else 
    p Do you really want to delete this Genre?

    form(method='POST')
      div.form-group 
        input(id='genreid' class='form-control' type='hidden' name='genreid' value=genre._id)

      button(class='btn btn-primary' type='submit') Delete
