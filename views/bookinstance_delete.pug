extends layout 

block content 

  h1 #{title} ofr: #{bookinstance.book.title} 

  p #[strong ID: ]
    a(href=bookinstance._id) #{bookinstance._id} 
  p #[strong Imprint: ] #{bookinstance.imprint} 

  p #[strong Status: ]
    if bookinstance.status == 'Available'
      p.text-success #{bookinstance.status}
    else if bookinstance.status == 'Maintenance'
      p.text-danger #{bookinstance.status}
    else 
      p.text-warning #{bookinstance.status} 

  if bookinstance.status != 'Available'
    p #[strong Due back: ] #{bookinstance.due_back_formatted}

  div(style='rmargin-top: 20px;')
    form(method='POST')
      div.form-group 
        input(id='bookinstanceid' class='form-control' type='hidden' name='bookinstanceid' value=bookinstance._id)

      button(class='btn btn-primary' type='submit') Delete