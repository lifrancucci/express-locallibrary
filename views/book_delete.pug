extends layout 

block content 

  h1 #{title}: #{book.title}

  if bookinstances.length 

    p #[strong Delete the following copies before attempting to delete this book.] 

    div(style='margin-left: 20px; margin-top: 20px;')
      h4 Copies

      each bookinstance in bookinstances
        p
          a(href=bookinstance.url) #{bookinstance.imprint} 
        if bookinstance.status == 'Available'
          p.text-success #{bookinstance.status}
        else if bookinstance.status == 'Maintenance'
          p.text-danger #{bookinstance.status}
        else 
          p.text-warning #{bookinstance.status} 

        if bookinstance.status != 'Available'
          p #[strong Due back: ] #{bookinstance.due_back_formatted} 
        hr

  else 
    p Do you really want to delete this Book?

    form(method='POST')
      div.form-group 
        input(id='bookid' class='form-control' type='hidden' name='bookid' value=book._id)

      button(class='btn btn-primary' type='submit') Delete
  